{
  "name": "token-counter",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run content-watch & vite build --watch",
    "build": "tsc && vite build && npm run content-build",
    "content-build": "esbuild src/content/index.ts --bundle --outfile=dist/content.js",
    "content-watch": "esbuild src/content/index.ts --bundle --outfile=dist/content.js --watch"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/node": "^24.10.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "typescript": "^5.5.3",
    "vite": "^5.3.3"
  }
}
