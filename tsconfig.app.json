// C:\Projects\TOKEN-COUNTER\tsconfig.app.json
// V1.5d (Task 1.5d): 根源修复

{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vite/client"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    
    // V1.5d 修复:
    // 彻底删除 "allowImportingTsExtensions": true
    // 这个规则是所有 5097 报错的根源。
    
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    
    // V1.5c 的修复:
    // 我们保留 "resolveJsonModule": true，因为它 100% 是正确的
    "resolveJsonModule": true, 

    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"]
}