{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"], // 确保 DOM 在这里
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    
    /* V135 修复：添加 node 类型 */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, 

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
    /* Chrome API types */
    "types": ["vite/client", "chrome", "node"] // V135 修复：添加 "node"
  },
  "include": ["src"],
  "references": [] 
}