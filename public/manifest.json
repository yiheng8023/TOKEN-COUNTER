{
  "manifest_version": 3,
  "name": "通用 Token 计数器",
  "version": "2.0",
  "description": "世界级、私密、离线的通用 Token 计算工具。",
  "default_locale": "zh_CN",
  "permissions": [
    "storage",
    "sidePanel",
    "unlimitedStorage",
    "debugger" 
  ],
  "host_permissions": [
    "https://gemini.google.com/*" 
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "通用 Token 计数器"
  },
  "side_panel": {
    "default_path": "side-panel.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "side-panel.html",
        "assets/*",
        "icons/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}