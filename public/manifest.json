{
  "manifest_version": 3,
  
  "name": "TOKEN-COUNTER (通用 Token 计数器)",
  "version": "1.0.0",
  "description": "A world-class, privacy-first, 100% local token counter. 世界级、私密、离线的通用 Token 计算工具。",

  "permissions": [
    "storage",
    "sidePanel",
    "scripting",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "https://gemini.google.com/*"
  ],
  "action": {
    "default_title": "TOKEN-COUNTER (通用 Token 计数器)"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://gemini.google.com/app*",
        "https://gemini.google.com/chat*"
      ],
      "js": [
        "gemini_content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "side-panel.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "side-panel.html",
        "assets/*",
        "icons/*",
        "gemini_interceptor.js" 
      ],
      "matches": ["https://gemini.google.com/*"]
    }
  ]
}