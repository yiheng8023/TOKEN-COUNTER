{
  "manifest_version": 3,
  "name": "Token Counter (v1.1)",
  "version": "1.1",
  "description": "V1.1: 重构版。实现 100% 本地、高精度、基于 @xenova/transformers 的 Token 计算。",
  "default_locale": "zh_CN",
  "permissions": [
    "storage",
    "sidePanel",
    "scripting",
    "unlimitedStorage",
    "offscreen"
  ],
  "host_permissions": [
    "https://gemini.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://gemini.google.com/app*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Token Counter (v1.1)"
  },
  "side_panel": {
    "default_path": "src/ui/side-panel.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/engine/offscreen.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}